<?xml version="1.0"?>
<config>
	<tabs>
		<develo translate="label" module="develo_wordpressknowledgebase">
			<label>Develo</label>
			<sort_order>2000</sort_order>
		</develo>
	</tabs>
	<sections>
		<develo_wordpressknowledgebase translate="label" module="develo_wordpressknowledgebase">
			<class>separator-top</class>
			<label>Wordpress Knowledge Base</label>
			<tab>develo</tab>
			<frontend_type>text</frontend_type>
			<sort_order>100</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<global_config translate="label" module="develo_wordpressknowledgebase">
					<label>Global Config</label>
					<sort_order>1</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<category_id translate="label" module="develo_wordpressknowledgebase">
							<label>Knowledge Base Category Id</label>
							<frontend_type>text</frontend_type>
							<sort_order>100</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</category_id>
						<number_per_row translate="label" module="develo_wordpressknowledgebase">
							<label>Number of Categories to Display per Row</label>
							<frontend_type>text</frontend_type>
							<sort_order>200</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</number_per_row>
						<list_display_limit translate="label" module="develo_wordpressknowledgebase">
							<label>Post Item Limit</label>
							<frontend_type>text</frontend_type>
							<sort_order>300</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</list_display_limit>
						<load_jquery translate="label" module="develo_wordpressknowledgebase">
							<label>Load jQuery</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>400</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</load_jquery>
					</fields>
				</global_config>
			</groups>
		</develo_wordpressknowledgebase>
	</sections>
</config>